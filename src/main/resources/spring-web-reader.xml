<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <import resource="spring-common.xml"/>
   
   <bean id="webPageReader" class="uk.co.mindbadger.web.WebPageReader">
   </bean>
   
   <bean id="teamPageParser" class="uk.co.mindbadger.footballresults.reader.web.SoccerbaseTeamPageParser">
       <property name="webPageReader" ref="webPageReader"/>
       <property name="url" value="http://www.soccerbase.com/teams/results.sd?season_id=__seasonNum__&amp;team_id=__teamId__&amp;teamTabs=results"/>
   </bean>

   <bean id="datePageParser" class="uk.co.mindbadger.footballresults.reader.web.SoccerbaseDatePageParser">
       <property name="webPageReader" ref="webPageReader"/>
       <property name="url" value="http://www.soccerbase.com/matches/results.sd?date=__fixtureDate__"/>
   </bean>
   	
   <bean id="reader" class="uk.co.mindbadger.footballresults.reader.web.SoccerbaseWebPageReader">
      <property name="dialect" value="soccerbase"/>
   </bean>
</beans>
