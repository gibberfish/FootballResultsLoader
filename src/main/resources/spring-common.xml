<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="xmlFileReader" class="uk.co.mindbadger.xml.XMLFileReader">
  </bean>

  <bean id="xmlFileWriter" class="uk.co.mindbadger.xml.XMLFileWriter">
  </bean>
  
  <bean id="mapping" class="uk.co.mindbadger.footballresults.loader.mapping.FootballResultsMapping">
      <constructor-arg value="C:\\Mark\\appConfig\\fra_mapping.xml"/>
      <constructor-arg ref="xmlFileReader"/>
      <constructor-arg ref="xmlFileWriter"/>
  </bean>
  
  <bean id="domainObjectFactory" class="uk.co.mindbadger.footballresultsanalyser.domain.DomainObjectFactoryImpl">
  </bean>

  <bean id="dao" class="uk.co.mindbadger.footballresultsanalyser.dao.FootballResultsAnalyserHibernateDAO">
      <property name="domainObjectFactory" ref="domainObjectFactory"/>
  </bean>

  <bean id="saver" class="uk.co.mindbadger.footballresults.loader.FootballResultsSaver">
  	<property name="dialect" value="soccerbase"/>
  	<property name="dao" ref="dao"/>
  	<property name="mapping" ref="mapping"/>
  </bean>
  
  <bean id="loader" class="uk.co.mindbadger.footballresults.loader.FootballResultsLoader">
    <property name="reader" ref="reader"/>
    <property name="saver" ref="saver"/>
    <property name="dao" ref="dao"/>
  </bean>
</beans>
