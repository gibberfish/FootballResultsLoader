<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="props" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
<!--
	  <property name="locations" value="file:///E:/Mark/appConfig/database.properties"/>
 -->
 		<property name="locations" value="file:///E:/Mark/appConfig/mongo.properties"/>
	</bean>

  <bean id="xmlFileReader" class="mindbadger.xml.XMLFileReader">
  </bean>

  <bean id="xmlFileWriter" class="mindbadger.xml.XMLFileWriter">
  </bean>
  
  <bean id="mapping" class="mindbadger.footballresults.loader.mapping.FootballResultsMapping">
      <constructor-arg value="E:\\Mark\\appConfig\\fra_mapping_cb.xml"/>
      <constructor-arg ref="xmlFileReader"/>
      <constructor-arg ref="xmlFileWriter"/>
  </bean>
  
  <bean id="domainObjectFactory" class="mindbadger.footballresultsanalyser.domain.DomainObjectFactoryImpl">
  </bean>

  <bean id="dao" class="mindbadger.footballresultsanalyser.dao.FootballResultsAnalyserCouchbaseDAO">
      <property name="bucketName" value="football"/>
      <property name="domainObjectFactory" ref="domainObjectFactory"/>
  </bean>

  <bean id="saver" class="mindbadger.footballresults.loader.FootballResultsSaver">
  	<property name="dialect" value="soccerbase"/>
  	<property name="dao" ref="dao"/>
  	<property name="mapping" ref="mapping"/>
  </bean>
  
  <bean id="loader" class="mindbadger.footballresults.loader.FootballResultsLoader">
    <property name="reader" ref="reader"/>
    <property name="saver" ref="saver"/>
    <property name="dao" ref="dao"/>
  </bean>
</beans>
