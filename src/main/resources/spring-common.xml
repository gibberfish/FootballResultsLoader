<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="xmlFileReader" class="uk.co.mindbadger.xml.XMLFileReader">
  </bean>

  <bean id="xmlFileWriter" class="uk.co.mindbadger.xml.XMLFileWriter">
  </bean>
  
  <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
    <property name="driverClassName" value="com.mysql.jdbc.Driver" />
    <property name="url" value="jdbc:mysql://localhost/football" />
    <property name="username" value="root" />
    <property name="password" value="sminge1" />
  </bean>
  
  <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
    <property name="dataSource" ref="dataSource"></property>
    <property name="annotatedClasses">
      <list>
        <value>uk.co.mindbadger.footballresultsanalyser.domain.SeasonImpl</value>
        <value>uk.co.mindbadger.footballresultsanalyser.domain.DivisionImpl</value>
        <value>uk.co.mindbadger.footballresultsanalyser.domain.TeamImpl</value>
        <value>uk.co.mindbadger.footballresultsanalyser.domain.SeasonDivisionImpl</value>
        <value>uk.co.mindbadger.footballresultsanalyser.domain.SeasonDivisionTeamImpl</value>
        <value>uk.co.mindbadger.footballresultsanalyser.domain.FixtureImpl</value>
      </list>
    </property>
    <property name="hibernateProperties">
      <props>
        <prop key="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</prop>
        <prop key="hibernate.show_sql">false</prop>
        <prop key="hibernate.connection.pool_size">10</prop>
        <prop key="hibernate.c3p0.min_size">5</prop>
        <prop key="hibernate.c3p0.max_size">20</prop>
        <prop key="hibernate.c3p0.timeout">300</prop>
        <prop key="hibernate.c3p0.max_statements">50</prop>
        <prop key="hibernate.c3p0.idle_test_period">3000</prop>
        <prop key="hibernate.hbm2ddl.auto">none</prop>
      </props>
    </property>
  </bean>
  
  <bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager" p:sessionFactory-ref="sessionFactory">
  </bean>
  
  <bean id="mapping" class="uk.co.mindbadger.footballresults.loader.mapping.FootballResultsMapping">
      <constructor-arg value="C:\\Mark\\appConfig\\fra_mapping.xml"/>
      <constructor-arg ref="xmlFileReader"/>
      <constructor-arg ref="xmlFileWriter"/>
  </bean>
  
  <bean id="domainObjectFactory" class="uk.co.mindbadger.footballresultsanalyser.domain.DomainObjectFactoryImpl">
  </bean>

  <bean id="dao" class="uk.co.mindbadger.footballresultsanalyser.dao.FootballResultsAnalyserHibernateDAO">
      <property name="domainObjectFactory" ref="domainObjectFactory"/>
      <property name="sessionFactory" ref="sessionFactory"/>
  </bean>

  <bean id="saver" class="uk.co.mindbadger.footballresults.loader.FootballResultsSaver">
  	<property name="dialect" value="soccerbase"/>
  	<property name="dao" ref="dao"/>
  	<property name="mapping" ref="mapping"/>
  </bean>
  
  <bean id="loader" class="uk.co.mindbadger.footballresults.loader.FootballResultsLoader">
    <property name="reader" ref="reader"/>
    <property name="saver" ref="saver"/>
    <property name="dao" ref="dao"/>
  </bean>
</beans>
